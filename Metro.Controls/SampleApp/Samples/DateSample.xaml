<Page
    x:Class="Metro.Controls.Demo.Samples.DateSample"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:Controls="using:Metro.Controls"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400">
    
    <Grid>
        <Controls:DatePicker x:Name="datePicker"
                             HorizontalAlignment="Center"
                             VerticalAlignment="Center" Margin="76,82,73,186" />

        <TextBlock x:Name="txDate"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   Margin="25,151,27,110"
                   FontSize="32"
                   Text="{Binding ElementName=datePicker, Path=SelectedValue}"
                   TextWrapping="Wrap" />

    </Grid>
</Page>
